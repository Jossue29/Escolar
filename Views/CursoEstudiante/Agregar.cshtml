@model Escolar.Models.CursoEstudiante

@{
    ViewData["Title"] = "Agregar CursoEstudiante";
}

<h1>Agregar CursoEstudiante</h1>
<h4>Asignar Estudiante a Curso</h4>
<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Agregar" method="post" enctype="multipart/form-data" role="form" novalidate class="form-horizontal">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="EstudianteId
                " class="control-label"></label>
                <select asp-for="EstudianteId" class="form-control" asp-items="@(new SelectList(ViewData["Estudiantes"] as System.Collections.IEnumerable, "Id", "Nombre"))">
                    <option value="">Selecciona un Estudiante</option>
                </select>
                <span asp-validation-for="EstudianteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CursoId" class="control-label"></label>
                <select asp-for="CursoId" class="form-control" asp-items="@(new SelectList(ViewData["Cursos"] as System.Collections.IEnumerable, "Id", "Nombre"))">
                    <option value="">Selecciona un Curso</option>
                </select>
                <span asp-validation-for="CursoId" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
