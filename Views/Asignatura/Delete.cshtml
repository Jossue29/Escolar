@model MVCproyecto.Models.Asignatura;

@{
    ViewData["title"] = "Eliminar Datos";
}

<h2>Eliminar Asignatura</h2>

<p>Esta seguro de eliminar la Asignatura "@Model.Nombre"</p>
<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit">Si, Eliminar</button>
    <button type="button" onclick="javascipts:history.back();">Cancelar</button>
</form>
