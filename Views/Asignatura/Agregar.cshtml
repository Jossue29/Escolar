@using Microsoft.AspNetCore.Mvc.Rendering
@using Escolar.Models;
@model Escolar.Models.Asignatura

@{
    ViewData["Title"] = "Agregar";
}

<h1>Agregar Nueva Asignatura</h1>
<h4>Asignatura</h4>
<hr>
<div class="row ">
    <div class="col-md-4">
        <form asp-action="Agregar" method="post" enctype="multipart/form-data" role="form" class="form-horizontal" novalidate>
            <div>
            <label asp-for="NombreAsignatura" class="control-label"></label>
            <input asp-for="NombreAsignatura" class="form-control">
            <span asp-validation-for="NombreAsignatura" class="text-danger"></span>
            </div>
            <div>
            <label asp-for="Descripcion" class="control-label"></label>
            <input asp-for="Descripcion" class="form-control">
             <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                @Html.LabelFor(m => m.ProfesorId)
                @Html.DropDownListFor(m => m.ProfesorId, (SelectList)ViewBag.Profesor, "Seleccione un Profesor")
                @Html.ValidationMessageFor(m => m.ProfesorId)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CursoId)
                @Html.DropDownListFor(m => m.CursoId, (SelectList)ViewBag.Curso, "Seleccione un Profesor")
                @Html.ValidationMessageFor(m => m.CursoId)
            </div>
            <br>
            <div class="form-grup">
                <button type="submit" value="Crear" class="btn btn-primary">Crear</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>